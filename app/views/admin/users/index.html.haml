.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_users_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_user_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Users
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.user.email", :default => t("activerecord.labels.email", :default => "Email"))
          %th= t("web-app-theme.name", :default => "Name")
          %th= t("web-app-theme.position", :default => "Position")
          %th= t("web-app-theme.business", :default => "Business")
          %th= t("web-app-theme.phone", :default => "Phone")
          %th= t("web-app-theme.login", :default => "Login")
          %th.last &nbsp;
        - @users.each do |user|
          %tr{:class => cycle("odd", "even")}
            %td
              = user.id
            %td
              = link_to user.email, admin_user_path(user)
            %td
              = "#{user.name} #{user.middle_name} #{user.last_name} #{user.second_last_name}" 
            %td
              = user.position
            %td
              = user.business_name
            %td
              = user.phone
            %td
              = user.login
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_user_path(user)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_user_path(user)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_user_path(user), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
        = will_paginate @users
- content_for :sidebar, render(:partial => 'sidebar')
