.group
  = f.label :category_id, t("activerecord.attributes.article.category", :default => "Category"), :class => :label
  =f.collection_select :category_id, @categories,:id,:name, :selected => article.category.id
  %span.description Ex: a simple text
.group
  = f.label :published, t("activerecord.attributes.article.published", :default => "Published"), :class => :label
  = f.text_field :published, :id => 'published', :class => "text_field"
  %span.description Ex: a simple text
.group
  = f.label :closed, t("activerecord.attributes.article.closed", :default => "Closed"), :class => :label
  = f.text_field :closed, :id => 'closed', :class => "text_field"
  %span.description Ex: a simple text
.group
  = f.label :title, t("activerecord.attributes.article.title", :default => "Title"), :class => :label
  = f.text_field :title, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :highlights, t("activerecord.attributes.article.highlights", :default => "Highlights"), :class => :label
  = f.text_area :highlights, :class => 'text_area'
  %span.description Solo escriba en esta tabla si desea que el resumen más importante de la noticia salga en la página de inicio, en esta página solo saldrán los últimos 20 (highlights) por fecha de publicación del articulo
.group
  = f.label :summary, t("activerecord.attributes.article.summary", :default => "Summary"), :class => :label
  = f.text_area :summary, :class => 'text_area'
  %span.description Ex: a simple text
.group
  = f.label :content, t("activerecord.attributes.article.content", :default => "Content"), :class => :label
  = f.text_area :content, :class => 'text_area mceEditor'
  %span.description Tenga en cuenta que el tamaño del contenido en pixeles no debe superar 640 de ancho, incluyendo tablas e imagenes
.group
  = f.label :thumb, t("activerecord.attributes.article.thumb", :default => "Thumb"), :class => :label
  = f.fields_for :thumb do |thumb_form|
    = thumb_form.file_field :picture, :class => "text_field"
    = thumb_form.hidden_field :purpose, :value => "thumb"
  %span.description 100 ancho maximo
.group
  = f.label :carrusel,"Carrusel" , :class => :label
  = f.check_box :carrusel, :class => 'check_box'
.group
  = f.label :carrusel_image, t("activerecord.attributes.article.carrusel_image", :default => "Carrusel Image"), :class => :label
  = f.fields_for :carrusel_image do |carrusel_image_form|
    = carrusel_image_form.file_field :picture, :class => "text_field"
    = carrusel_image_form.hidden_field :purpose, :value => "carrusel"
  %span.description 620 x 100 ancho
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admins_articles_path, :class => "text_button_padding link_button"
