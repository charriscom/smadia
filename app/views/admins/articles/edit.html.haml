.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admins_articles_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admins_article_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admins_article_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Article
    .inner
      = form_for @article, :url => admins_article_path(@article), :html => { :class => :form, :multipart => true } do |f|
        = render :partial => "form", :locals => {:f => f, :article => @article}

