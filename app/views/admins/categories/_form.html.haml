.group
  = f.label :name, t("activerecord.attributes.category.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: a simple text
-if category.parent_category
  .group
    = f.label :category_id, t("activerecord.attributes.category.category_id", :default => "Category"), :class => :label
    =f.collection_select :category_id, @categories,:id,:name, :selected => category.parent_category.id
    %span.description Ex: a simple text
.group
  = f.label :description, t("activerecord.attributes.category.description", :default => "Description"), :class => :label
  = f.text_area :description, :class => 'text_area'
  %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admins_categories_path, :class => "text_button_padding link_button"
