.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admins_categories_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admins_category_path
      %li= link_to "#{t("web-app-theme.export", :default => "Export")}", admins_categories_path(:format => "xls")
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Categories
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.admins_category.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @categories.each do |category|
          %tr{:class => cycle("odd", "even")}
            %td
              = category.id
            %td
              = link_to category.name, admins_category_path(category)
            %td
              = category.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admins_category_path(category)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admins_category_path(category)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admins_category_path(category), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
          = will_paginate @categories
- content_for :sidebar, render(:partial => 'sidebar')
