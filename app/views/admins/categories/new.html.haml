.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admins_categories_path
      %li.active= link_to "#{t("web-app-theme.new", :default => "New")}", new_admins_category_path
  .content
    %h2.title
      = t("web-app-theme.new", :default => "New")
      Category
    .inner
      = form_for :category, :url => admins_categories_path, :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f, :category => @category}

