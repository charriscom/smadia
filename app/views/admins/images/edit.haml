.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admins_images_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admins_image_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admins_image_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Imagenes
    .inner
      = form_for @image, :url => admins_image_path(@image), :html => { :class => :form, :multipart => true } do |f|
        = render :partial => "form", :locals => {:f => f}

