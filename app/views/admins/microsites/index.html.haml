.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admins_microsites_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admins_microsite_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Microsites
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.admins_microsite.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @microsites.each do |microsite|
          %tr{:class => cycle("odd", "even")}
            %td
              = microsite.id
            %td
              = link_to microsite.name, admins_microsite_path(microsite)
            %td
              = microsite.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admins_microsite_path(microsite)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admins_microsite_path(microsite)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admins_microsite_path(microsite), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
