.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admins_promotions_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admins_promotion_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admins_promotion_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Promotion
    .inner
      = form_for @promotion, :url => admins_promotion_path(@promotion), :html => { :class => :form, :multipart => true } do |f|
        = render :partial => "form", :locals => {:f => f, :promotion => @promotion}
- content_for :sidebar, render(:partial => 'sidebar')
