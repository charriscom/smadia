%li
  = link_to category.name, category_path(category.id)
  %ul.nav{:class => category.parent_category.name=="Menu Principal" && "first"}
    =render category.subcategories
    -category.articles.each do |article|
      %li
        = link_to  article.title, article_path(article.id)
    -category.promotions.each do |promotion|
      %li
        = link_to  promotion.title, promotion_path(promotion.id)
    -category.microsites.each do |microsite|
      %li
        = link_to  microsite.title, microsite_path(microsite.id)