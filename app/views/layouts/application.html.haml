          Cufon.replace('.title span,#rightcold .title span, #login, #rightcol h3');
          var addthis_config = {"data_track_clickback":true};
  %body
    #wrapper 
      #header
        .logo
        /%span#login log in
      #menu
        %ul#nav
          %li 
            =link_to "Inicio", root_path
          = render @main_menu.subcategories 
          %li 
            =link_to "Contacto", pages_contact_path
        %span.search
          -form_for :search, :url => pages_search_path do |f|
            =f.text_field :param, :size => 20      
      .flash
        - flash.each do |type, message|
          %div{:class => "message #{type}"}
            %p= message
      = yield
