%html
  %head
    %title Smadia Clinic
    %link{:href => "images/smadia-ico.ico", :rel => "shortcut icon", :type => "image/ico"}/
    = stylesheet_link_tag "style", "nivo-slider", "jquery.countdown"
    = javascript_include_tag "jquery-1.5.2.min","jquery-rails","jquery-ui","Cyclo_400.font","application","jquery.countdown","jquery.nivo.slider.pack", "turboTicker.JQuery"
    = csrf_meta_tag
    = javascript_include_tag "http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4dac4fa3199b4742"
