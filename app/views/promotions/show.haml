#titulo
  %span.tpagina
    SMADIA     /
    %br/
    %span.letrap clinic
  %span.titulos 
    = @promotion.summary
#main
  #producto
    .cuadroic
      #slide
        -@promotion.images.each do |image|
          =swf_or_image_tag(nil,"original",image.picture) if image.picture.file?
    %p.bottompromo
      =image_tag "clock.png"
      Tiempo Restante
      %span{:id =>"countdown"} 
  #comprar
    %table{ :width =>"265", :border=> "0"}
      %tr
        %th{:width=>"88", :height=>"30"}
          precio
        %th{:colspan =>"2"}
          %span.presumen
            =number_to_currency @promotion.discount_value
      %tr
        %td.d{:height=>"21", :align=>"center"}
          antes
        %td.d{:width =>"86", :align =>"center"}
          descuento
        %td.d{:width =>"77", :align=>"center"}
          ahora
      %tr
        %td{:align=>"center"}
          =number_to_currency @promotion.value
        %td{:align=>"center"}
          ="#{@promotion.discount} %"
        %td{:align=>"center"}
          =number_to_currency @promotion.discount_value
    = raw @promotion.pagos_online_form
  .cfacebook
    %iframe{:src=>"http://www.facebook.com/plugins/likebox.php?href=http%3A%2F%2Fwww.facebook.com%2Fplatform&amp;width=266&amp;colorscheme=light&amp;show_faces=true&amp;stream=false&amp;header=false&amp;height=216", :scrolling=>"no", :frameborder=>"0", :style=>"border:none; overflow:hidden; width:266px; height:216px;", :allowtransparency=>"true"}
  #infoprod
    #tinfo
      Informacion del producto
    #articulo
      = raw @promotion.content
  %p.pyc
    Politicas y condiciones
#pycuadro
  =raw @promotion.terms
:javascript
  $('#countdown').countdown({date:'#{countdown_time @promotion.closed}',id:"countdown"});
  $(window).load(function() {$('#slide').nivoSlider({ effect:'sliceUpDown'});});